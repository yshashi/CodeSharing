{
    "version": 2,
    "name": "code-sharing-app",
    "builds": [
        {
            "src": "frontend/", 
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)", 
            "dest": "server/$1",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}